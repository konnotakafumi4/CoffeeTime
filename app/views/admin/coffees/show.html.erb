<div class="coffee-show d-flex bd-highlight mt-5">
  <h3 class="mr-auto p-2 bd-highlight">投稿詳細</h3>
  <div class="text-right p-2">
      <%= link_to "削除", admin_coffee_path(@coffee), class: "btn btn-danger", data: { confirm: "この投稿を削除します、よろしいですか？" }, method: :delete %>
  </div>
</div>

<%= render "admin/coffees/coffee", coffee: @coffee %>

<div class="comments-area">
  <%= render "admin/coffee_comments/comment", comments: @comments %>
</div>