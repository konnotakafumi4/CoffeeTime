<% if end_user_signed_in? %>
  <div class="search_form row">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <div style="display: flex;">
      <%= f.text_field :word, placeholder: "search", class: "form-control ", style: "margin-right: 10px;", :required => true %>
      <%= f.select :range, options_for_select([['ユーザー'], ['投稿']]) ,{}, {class: "form-select", style: "margin-right: 10px;"} %>
      <%= f.submit "検索", class: "btn btn-primary", style: "margin-right: 30px;" %>
      </div>
    <% end %>
  </div>
<% end %>




