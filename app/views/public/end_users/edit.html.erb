<h3>プロフィール編集</h3>
<%= form_with model: @end_user, url: public_end_user_path, method: :patch, local: true do |f| %>
  <div class="form-group">
    <% if @end_user.end_user_image.attached? %>
      <%= image_tag @end_user.get_profile_image(100,100), class: "rounded-circle" %>
    <% else %>
      <%= image_tag 'no_image.jpg', size: "100", class: "rounded-circle" %>
    <% end %>
    <%= f.file_field :end_user_image, class: "form-control-file user_image", accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction%>
  </div>

  <div class="form-group">
    <%= f.submit '保存' %>
  </div>

<% end %>