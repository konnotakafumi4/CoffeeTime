<h3 class="user-edit-headline">プロフィール編集</h3>
<%= form_with model: @end_user, url: public_end_user_path, method: :patch, local: true do |f| %>
<%= render "public/shared/error", coffee: @end_user %>
  <div class="user-edit shadow mb-2 border rounded p-2" style="background-color: #fffcf0;">
    <div class="">
      <% if @end_user.end_user_image.attached? %>
        <%= image_tag @end_user.get_profile_image(60,60), class: "rounded-circle" %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "60", class: "rounded-circle" %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :end_user_image, "プロフィール画像" %>
      <%= f.file_field :end_user_image, class: "form-control-file user_image", accept: 'image/*' %>
    </div>

    <div class="form-group">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "紹介文" %><br />
      <%= f.text_area :introduction%>
    </div>

    <div class="form-group">
      <%= f.submit '保存', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>