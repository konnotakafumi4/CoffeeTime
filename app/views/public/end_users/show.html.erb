<h1>ユーザー詳細</h1>

  <div class="change-btn text-right">
    <% if @end_user == current_end_user %>
      <%= link_to "削除", admin_end_user_path(@end_user) %>
      <%= link_to "編集", edit_public_end_user_path %>
    <% end %>
    <% unless @end_user == current_end_user %>
      <% if current_end_user.following?(@end_user) %>
        <%= link_to "フォロー外す", public_end_user_relationships_path(@end_user.id), method: :delete, remote: true %>
      <% else %>
        <%= link_to "フォローする", public_end_user_relationships_path(@end_user.id), method: :post, remote: true %>
      <% end %>
    <% end %>
  </div>


<div class="information">
  <div class="first-infoemation">
    <%= image_tag @end_user.get_profile_image(100,100), class: "rounded-circle" %>
    <%= @end_user.name %><br />
  </div>
  <div class="introduction">
    <%= @end_user.introduction %><br />
  </div>
  <div class="follower-count">
    <%= link_to public_end_user_followings_path(@end_user.id) do %>
      フォロー<%= @end_user.followings.count %>
    <% end %>
    <%= link_to public_end_user_followers_path(@end_user.id)  do %>
      フォロワー<%= @end_user.followers.count %>
    <% end %>
  </div>
  <div class="favorite-list">
    <%= link_to "いいね一覧", favorites_public_end_user_path(@end_user.id) %>
  </div>
</div>

<div class="end_user_coffee_list">
  <% @coffees.each do |coffee| %>
    <div class="coffee_list_box mb-2">
      <%= link_to public_end_user_path(coffee.end_user) do %>
        <%= image_tag coffee.end_user.get_profile_image(50,50), class: "rounded-circle" %>
        <%= coffee.end_user.name %>
      <% end %>
      <br />
      <%= link_to public_coffee_path(coffee) do %>
        <% coffee.get_profile_image(400,400).each do |image| %>
          <%= image_tag image %><br />
        <% end %>
        <%= coffee.text %>
      <% end %>

      <div class="form-inline">
        <%= link_to public_coffee_path(coffee) do %>
          <i class="fa fa-commenting-o"></i><%= coffee.coffee_comments.count %>
        <% end %>

        <div class="favorite_buttons_<%= coffee.id %>">
          <%= render "public/favorites/favorite", coffee: coffee %>
        </div>
      </div>
    </div>
  <% end %>
</div>