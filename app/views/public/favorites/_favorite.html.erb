<% if coffee.favorited_by?(current_end_user) %>
  <%= link_to public_coffee_favorites_path(coffee), method: :delete, remote: true do %>
    <i class="fas fa-heart red-heart"></i><%= coffee.favorites.count %>
  <% end %>
  <% else %>
  <%= link_to public_coffee_favorites_path(coffee), method: :post, remote: true do %>
    <i class="far fa-heart"></i><%= coffee.favorites.count %>
  <% end %>
<% end %>