<div class="coffee_comment">
  <% comments.each do |comment| %>
    <div class="coffee_comment_list">
      <%= link_to public_end_user_path(comment.end_user) do %>
        <% if comment.end_user.end_user_image.attached? %>
          <%= image_tag comment.end_user.get_profile_image(100,100), class: "rounded-circle" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "100", class: "rounded-circle" %>
        <% end %>
        <%= comment.end_user.name %><br />
      <% end %>

      <% if comment.end_user == current_end_user %>
        <%= link_to "削除", public_coffee_comment_path(comment), method: :delete, remote: true, data: { confilm: "本当に削除しますか？" } %>
      <% end %><br />

      <% comment.get_comment_image(100,100).each do |image| %>
        <%= image_tag image %>
      <% end %><br />

      <%= comment.comment %>
    </div>
  <% end %>
</div>