<div class="coffee-comment-list shadow border border-light p-2 rounded" style="background-color: #FFFFF0; font-size: 20px;">
  <% comments.each do |comment| %>
    <%= link_to public_end_user_path(comment.end_user) do %>
      <div class="d-flex bd-highlight">
        <div class="">
          <% if comment.end_user.end_user_image.attached? %>
            <%= image_tag comment.end_user.get_profile_image(60,60), class: "rounded-circle" %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: "60", class: "rounded-circle" %>
          <% end %>
          <%= comment.end_user.name %><br />
        </div>
        <div class="ml-auto p-2 bd-highlight">
          <% if comment.end_user == current_end_user %>
            <%= link_to "削除", public_coffee_comment_path(comment), method: :delete, remote: true, class: "btn btn-danger", data: {confirm: "削除しますか？"} %>
          <% end %><br />
        </div>
      </div>
    <% end %>
      <div class="border-bottom mb-2">
        <%= comment.comment %>
      </div>
  <% end %>
</div>