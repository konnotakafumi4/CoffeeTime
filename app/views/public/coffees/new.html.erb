<h4>投稿する</h4>
<%= form_with model: @coffee, url: public_coffees_path, method: :post do |f| %>
<div class="form-group">
  <%= f.label :image, "画像" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>
<div class="form-group">
  <%= f.label :text %>
  <%= f.text_area :text %>
</div>
<div class="form-group">
  <%= f.submit "投稿" %>
</div>
<% end %>
