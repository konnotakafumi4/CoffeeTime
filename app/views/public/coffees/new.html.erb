<h3 class="coffee-new-headline">投稿する</h3>
<%= render "public/shared/error", coffee: @coffee %>
<div class="coffee-new shadow p-2" style="background-color: #fffcf0;">
  <%= form_with model: @coffee, url: public_coffees_path, method: :post do |f| %>
  <div class="form-group p-2">
    <%= f.label :images, "image" %><br />
    <%= f.file_field :images, accept: "image/*", multiple: true %>
  </div>
  <div class="form-group p-2">
    <%= f.label :text, "text" %><br />
    <%= f.text_area :text %>
  </div>
  <div class="form-group p-2">
    <%= f.submit "投稿", class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
